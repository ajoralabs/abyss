{
	"name": "voidflux",
	"version": "0.0.1",
	"devDependencies": {
		"@biomejs/biome": "2.4.2",
		"@changesets/cli": "2.29.8",
		"@commitlint/cli": "20.4.1",
		"@commitlint/config-conventional": "20.4.1",
		"husky": "9.1.7",
		"turbo": "2.8.9"
	},
	"engines": {
		"node": ">=22",
		"bun": ">=1.3.5"
	},
	"packageManager": "bun@1.3.5",
	"private": true,
	"scripts": {
		"dev": "turbo dev --ui tui",
		"dev:web": "turbo dev --filter=@voidflux/web  --ui tui",
		"dev:cli": "bun run apps/cli/src/index.ts  --ui tui",
		"build": "turbo build",
		"build:web": "turbo build --filter=@voidflux/web",
		"lint": "turbo lint",
		"lint:fix": "biome check --write",
		"format": "biome format --write",
		"db:generate": "turbo db:generate",
		"db:push": "turbo db:push",
		"test": "echo 'No tests yet'",
		"direct": "echo 'nothing'",
		"prepare": "husky"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
