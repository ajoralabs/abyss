{
	"$schema": "https://biomejs.dev/schemas/2.4.0/schema.json",
	"files": {
		"includes": [
			"**",
			"!node_modules",
			"!dist",
			"!build",
			"!.output",
			"!.vinxi",
			"!.nitro",
			"!*.lock",
			"!*.lockb",
			"!src/generated"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noUselessFragments": "warn"
			},
			"style": {
				"noNonNullAssertion": "warn",
				"useConst": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	}
}
